{% extends 'base.html.twig' %}

{% block title %}Add a pokemon{% endblock %}
{% block h2 %}Add a pokemon{% endblock %}

{% block body %}
        <div class="actions">
                <a class="btn bg-ok" href="{{ path('pkm_list') }}">Browse your Pokedex</a>
                <a class="btn bg-ok" href="{{ path('pkm_random') }}">Random pokemon</a>
        </div>

        <div class="detail">
                <div class="illu details">
                        <img src="{{ asset("assets/images/201.svg") }}" alt=""></div>
                <div class="details description">
                        <div class="pkm_details">
                                {{ form_start(form) }}
                                        {{ form_label(form.name) }}<br>
                                        {{ form_widget(form.name) }}<br>
                                        {{ form_errors(form.name) }}

                                        {{ form_label(form.specie) }}<br>
                                        {{ form_widget(form.specie) }}<br>
                                        {{ form_errors(form.specie) }}

                                        {{ form_label(form.catchPlace) }}<br>
                                        {{ form_widget(form.catchPlace) }}<br>
                                        {{ form_errors(form.catchPlace) }}

                                        {{ form_label(form.level) }}<br>
                                        {{ form_widget(form.level) }}<br>
                                        {{ form_errors(form.level) }}

                                        {{ form_label(form.hp) }}<br>
                                        {{ form_widget(form.hp) }}<br>
                                        {{ form_errors(form.hp) }}

                                        {{ form_label(form.isShiny) }}
                                        {{ form_widget(form.isShiny) }}<br>
                                        {{ form_errors(form.isShiny) }}

                                {{ form_rest(form) }}
                                <button type="submit">Enregistrer</button>
                                {{ form_end(form) }}
                        </div>
                </div>
        </div>
{% endblock %}
